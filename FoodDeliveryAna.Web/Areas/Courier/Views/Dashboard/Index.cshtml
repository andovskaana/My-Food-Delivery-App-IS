@using System.Globalization
@using System.Security.Claims
@model IEnumerable<FoodDeliveryAna.Domain.DomainModels.Order>

@{
    ViewData["Title"] = "Courier Dashboard";
   // string Money(decimal v) => v.ToString("C", CultureInfo.CurrentCulture);
    string Money(decimal v) => v.ToString("N2") + " den";
    var myId = User.FindFirstValue(ClaimTypes.NameIdentifier);

    var Placed = FoodDeliveryAna.Domain.Enums.OrderStatus.Placed;
    var Accepted = FoodDeliveryAna.Domain.Enums.OrderStatus.Accepted;
    var PickedUp = FoodDeliveryAna.Domain.Enums.OrderStatus.PickedUp;
    var Delivered = FoodDeliveryAna.Domain.Enums.OrderStatus.Delivered;

    var available = Model.Where(o => o.CourierId == null && o.Status == Placed)
                          .OrderByDescending(o => o.CreatedAt)
                          .ToList();

    var inProgress = Model.Where(o => o.CourierId == myId && (o.Status == Accepted || o.Status == PickedUp))
                          .OrderByDescending(o => o.CreatedAt)
                          .ToList();

    var completed = Model.Where(o => o.CourierId == myId && o.Status == Delivered)
                          .OrderByDescending(o => o.CreatedAt)
                          .ToList();
}

<div class="container mt-4">
    <h2 class="mb-3">Courier Dashboard</h2>

    <!-- In progress -->
    <div class="card shadow-sm mb-4">
        <div class="card-header">In progress</div>
        <div class="card-body table-responsive">
            <table class="table table-striped align-middle mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Placed</th>
                        <th>Delivery address</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (inProgress.Any())
                    {
                        foreach (var o in inProgress)
                        {
                            var restaurantName =
                            o?.Items?
                            .Select(i => i.MenuItem?.Menu?.Restaurant?.Name)
                            .FirstOrDefault(n => !string.IsNullOrWhiteSpace(n))
                            ?? "—";

                            var address = !string.IsNullOrWhiteSpace(o?.DeliveryAddress)
                            ? o.DeliveryAddress
                            : (o?.Owner?.Address ?? "—");

                            var collapseId = $"ord-{o.Id:N}";
                            <tr>
                                <td>@o.Id</td>
                                <td><span class="badge bg-secondary">@o.Status</span></td>
                                <td>@o.Total.ToString("N2") den</td>
                                <td>@o.CreatedAt.ToLocalTime()</td>
                                <td class="text-truncate" style="max-width: 280px;" title="@address">@address</td>
                                <td class="text-end">
                                    <button class="btn btn-sm btn-outline-secondary me-2" type="button"
                                            data-bs-toggle="collapse" data-bs-target="#@collapseId"
                                            aria-expanded="false" aria-controls="@collapseId">
                                        Details
                                    </button>

                                    @if (o.Status == Accepted)
                                    {
                                        <form asp-action="StartDelivery" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@o.Id" />
                                            <button class="btn btn-sm btn-warning">Start delivery</button>
                                        </form>
                                    }
                                    else if (o.Status == PickedUp)
                                    {
                                        <form asp-action="MarkDelivered" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@o.Id" />
                                            <button class="btn btn-sm btn-success">Mark delivered</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No actions</span>
                                    }
                                </td>
                            </tr>

                            <!-- Items/details row -->
                            <tr class="collapse" id="@collapseId">
                                <td colspan="6" class="bg-light">
                                    <div class="p-3">
                                        <div class="row g-3 mb-2">
                                            <div class="col-md-4">
                                                <div class="small text-muted">Restaurant</div>
                                                <div class="fw-semibold">@restaurantName</div>
                                            </div>
                                            <div class="col-md-8">
                                                <div class="small text-muted">Customer address</div>
                                                <div class="fw-semibold">@address</div>
                                            </div>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table table-sm mb-0">
                                                <thead>
                                                    <tr>
                                                        <th>Item</th>
                                                        <th class="text-end">Qty</th>
                                                        <th class="text-end">Unit</th>
                                                        <th class="text-end">Subtotal</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var it in o.Items ?? Enumerable.Empty<FoodDeliveryAna.Domain.DomainModels.OrderItem>())
                                                    {
                                                        var subtotal = it.UnitPrice * it.Quantity;
                                                        <tr>
                                                            <td>@(it.MenuItemName ?? it.MenuItem?.Name)</td>
                                                            <td class="text-end">@it.Quantity</td>
                                                            <td class="text-end">@(it.UnitPrice)</td>
                                                            <td class="text-end">@o.Total.ToString("N2")</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot>
                                                    <tr>
                                                        <td colspan="3" class="text-end fw-semibold">Total</td>
                                                        <td class="text-end fw-bold">@o.Total.ToString("N2")</td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr><td colspan="6" class="text-muted">No active deliveries right now.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

