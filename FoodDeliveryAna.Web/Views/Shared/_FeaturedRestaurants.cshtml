﻿@using FoodDeliveryAna.Domain.DomainModels
@inject FoodDeliveryAna.Repository.ApplicationDbContext Db
@inject FoodDeliveryAna.Web.Services.PixabayService Pix
@{
    var items = Db.Restaurants.Take(6).ToList();
}
<div class="row g-4">
    @foreach (var r in items)
    {
        var address = string.Join(", ", new[] { r.StreetAddress, r.City }.Where(x => !string.IsNullOrWhiteSpace(x)));
        var img = await Pix.GetRestaurantImageUrlAsync(r.Name, small: true);
        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card h-100">
                <img class="card-img-top"
                     src="@(await Pix.GetImageUrlAsync($"{r.Name} restaurant", small: true))"
                     alt="@r.Name"
                     loading="lazy" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@r.Name</h5>
                    <p class="card-text text-muted">@address</p>
                    <div class="mt-auto d-flex gap-2">
                        <a asp-controller="Restaurants" asp-action="Details" asp-route-id="@r.Id" class="btn btn-outline-dark">View</a>
                        <a asp-controller="Menus" asp-action="Index" asp-route-restaurantId="@r.Id" class="btn btn-primary">Browse menu</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
