@using System.Linq
@using FoodDeliveryAna.Domain.DomainModels
@inject FoodDeliveryAna.Repository.ApplicationDbContext Db

@using FoodDeliveryAna.Service
@inject IRestaurantOpenStatusService StatusService

@{
    var items = Db.Restaurants.Take(6).ToList();

    // fetch API statuses once and map by restaurant name (case-insensitive)
    var apiStatuses = await StatusService.GetStatusesAsync();
    var statusByName = apiStatuses.ToDictionary(s => s.RestaurantName, StringComparer.OrdinalIgnoreCase);
}

<div class="row g-4">
    @foreach (var r in items)
    {
        var address = string.Join(", ", new[] { r.StreetAddress, r.City }.Where(x => !string.IsNullOrWhiteSpace(x)));
        var img = string.IsNullOrWhiteSpace(r.ImageUrl) ? "/images/placeholder-restaurant.jpg" : r.ImageUrl;

        // find API status by name
        FoodDeliveryAna.Service.RestaurantOpenStatus? st = null;
        statusByName.TryGetValue(r.Name ?? string.Empty, out st);

        var badgeCss = (st?.IsOpen ?? false) ? "badge bg-success" : "badge bg-secondary";
        var badgeText = (st?.IsOpen ?? false) ? "Open" : "Closed";
        var ratingText = (st?.Rating is double rt) ? rt.ToString("0.0") : "-";
        var todayRangeText = string.IsNullOrWhiteSpace(st?.TodayRange) ? "closed" : st!.TodayRange!;

        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card h-100 shadow-sm">
                <img class="card-img-top" src="@img" alt="@r.Name" loading="lazy" />
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start">
                        <h5 class="card-title mb-0">@r.Name</h5>
                        @if (st != null)
                        {
                            <span class="@badgeCss">@badgeText</span>
                        }
                    </div>

                    @if (st != null)
                    {
                        <div class="d-flex align-items-center gap-2 mt-2">
                            <small class="text-muted">★ @ratingText</small>
                            <small class="text-muted">• Today: @todayRangeText</small>
                        </div>
                    }

                    <p class="card-text text-muted mt-2">@address</p>

                    <div class="mt-auto d-flex gap-2">
                        <a asp-controller="Restaurants" asp-action="Details" asp-route-id="@r.Id" class="btn btn-outline-dark">View</a>
                        <a asp-controller="Menus" asp-action="Index" asp-route-restaurantId="@r.Id" class="btn btn-primary">Browse menu</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
