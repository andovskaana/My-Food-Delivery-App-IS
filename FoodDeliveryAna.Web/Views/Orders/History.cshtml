@model IEnumerable<FoodDeliveryAna.Domain.DomainModels.Order>

@{
    ViewData["Title"] = "Order History";
}

<h2>Your Orders</h2>

@if (Model == null || !Model.Any())
{
    <p>You haven't placed any orders yet.</p>
    <a asp-controller="Restaurants" asp-action="Index" class="btn btn-primary">Browse Restaurants</a>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Total</th>
                <th>Items</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.CreatedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</td>
                <td>@order.Total.ToString("C")</td>
                <td>@order.Items.Count()</td>
                <td><a asp-action="Success" asp-route-id="@order.Id">View</a></td>
            </tr>
        }
        </tbody>
    </table>
}