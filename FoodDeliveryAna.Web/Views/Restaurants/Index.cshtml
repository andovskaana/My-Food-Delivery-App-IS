@model IEnumerable<FoodDeliveryAna.Domain.DomainModels.Restaurant>

@{
    ViewData["Title"] = "Restaurants";
}

<h1 class="h4 fw-semibold mb-3">Restaurants</h1>

<div class="row g-4">
    @foreach (var item in Model)
    {
        var address = string.Join(", ", new[] { item.StreetAddress, item.City }.Where(x => !string.IsNullOrWhiteSpace(x)));
        var img = string.IsNullOrWhiteSpace(item.ImageUrl) ? "/images/placeholder-restaurant.jpg" : item.ImageUrl;

        <div class="col-12 col-sm-6 col-lg-4">
            <div class="card h-100">
                <img class="card-img-top" src="@img" alt="@item.Name" loading="lazy" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title mb-1">@item.Name</h5>
                    <p class="card-text text-muted">@address</p>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-dark mt-auto">Details</a>
                </div>
            </div>
        </div>
    }
</div>